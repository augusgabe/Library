<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/lendinfo_bg"
	android:orientation="vertical"
	>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/return_lend_Btn"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginStart="20dp"
			android:background="@drawable/rt" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="借阅信息"
			android:layout_centerInParent="true"
			android:textAlignment="center"
			android:textColor="@color/cold_gray"
			android:textSize="20sp"/>

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"

		android:orientation="horizontal">



		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:text="借阅图书:"
				android:paddingTop="15dp"
				android:layout_marginStart="20dp"
				android:layout_marginEnd="15dp"
				android:textSize="18sp"
				android:textColor="@color/cold_gray"
				tools:ignore="NestedWeights" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:text="借阅人:"
				android:paddingTop="15dp"
				android:layout_marginStart="20dp"
				android:layout_marginEnd="15dp"
				android:textSize="18sp"
				android:textColor="@color/cold_gray"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:text="身份证号:"
				android:paddingTop="15dp"
				android:layout_marginStart="20dp"
				android:textSize="18sp"
				android:textColor="@color/cold_gray"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:text="借阅时间:"
				android:paddingTop="15dp"
				android:layout_marginStart="20dp"
				android:textSize="18sp"
				android:textColor="@color/cold_gray"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="4"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/bookLended"
				android:layout_width="220dp"
				android:layout_height="wrap_content"
				android:text="书名"
				android:layout_marginTop="10dp"
				android:textAlignment="center"
				android:textSize="18sp"
				android:padding="5dp"
				/>

			<EditText
				android:id="@+id/bookLender"
				android:layout_width="220dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:textAlignment="center"
				android:background="@drawable/shape_edit_normal"
				/>

			<EditText
				android:id="@+id/lenderID"
				android:layout_width="220dp"
				android:layout_height="wrap_content"
				android:textAlignment="textStart"
				android:layout_marginTop="10dp"
				android:background="@drawable/shape_edit_normal"
				/>

			<LinearLayout
				android:layout_width="220dp"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="10dp"
				>

				<EditText
					android:id="@+id/lendDay"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:textAlignment="center"
					android:background="@drawable/shape_edit_normal"
					/>

				<TextView
					android:layout_marginStart="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="天"
					android:textSize="18sp"/>

			</LinearLayout>


		</LinearLayout>

	</LinearLayout>

	<Button
		android:id="@+id/toLend"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:textAlignment="center"
		android:text="申请借阅"
		android:padding="5dp"
		android:textColor="@color/white"/>

</LinearLayout>